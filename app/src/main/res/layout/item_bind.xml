<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/equipView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp" >

        <!-- 图标 -->

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <!-- 设备名称 -->

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="血压计"
                android:textColor="@color/homepage_black"
                android:textSize="20sp" />
            <!-- 连接状态名称 -->

            <TextView
                android:id="@+id/deviceSerial_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="正在同步"
                android:textColor="@color/equipment_link"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bind_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="正在同步"
                android:textColor="@color/equipment_link"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bind_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/equipment_btn"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定"
                android:textColor="@color/equipment_btn"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/move_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/home_equipment__edit_icon"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>